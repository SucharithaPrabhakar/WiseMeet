<head>
<script type="text/javascript">
  function loadScript() {
  var script = document.createElement('script');
  script.type = 'text/javascript';
  script.src = 'https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyBslslsjt39lrmv1mW0DhRkQF4eHQ-cL0I' +
      '&signed_in=true&callback=specifylocation';
  document.body.appendChild(script);
  }
  window.onload = loadScript();
</script>
</head>

<h1>Add Your Location</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
  
<% provide(:title, 'Add/Change your location for this group') %>
<%= form_tag(savelocation_path(@group), :method=>'patch') do |f| %>
   <%= hidden_field_tag('group_id', @group.id) %>
<div id="map"></div>
   <%= hidden_field_tag('map_lat', nil, id: 'map_lat') %>
   <%= hidden_field_tag('map_lng', nil, id: 'map_lng') %>
   <%= submit_tag "Add/Change Location", class: "btn btn-primary" %>
<% end %>

</div>
</div>

